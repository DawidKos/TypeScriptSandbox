{
    "compilerOptions": {
        "target": "es2021",
        "outDir": "./dist",
        "rootDir": "./src",

        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "module": "commonjs",
        "allowJs": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["es7", "es2021", "dom"]
    }
}